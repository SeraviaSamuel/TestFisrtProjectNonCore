@model  List<TestFisrtProjectNonCore.Models.Book>
@{
    ViewBag.Title = "Index";
}

<h2 class="text-dark">Books</h2>
<hr />
<a href="/Books/Create" class="btn btn-dark">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 448 512" fill="currentColor">
        <path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32l0 144L48 224c-17.7 0-32 14.3-32 32s14.3 32 32 32l144 0 0 144c0 17.7 14.3 32 32 32s32-14.3 32-32l0-144 144 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-144 0 0-144z" />
    </svg> Add New
</a>
<hr />


@if (Model.Any())
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Auther</th>
                <th>Category</th>
                <th>Description</th>
                <th>Added On</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    @*<th>@book.Title</th>*@
                    <th> <a class="text-dark" href="@Url.Action("Details", "Books", new { id = book.Id })">@book.Title</a></th>


                    <th>@book.Auther</th>
                    <th>@book.Category.Name</th>
                    <th>@book.Description</th>
                    <th>@book.AddedOn.ToString("yyyy-MM-dd")</th>
                    @*<th>@book.AddedOn</th>*@
                    <th>
                        <a href="@Url.Action("Edit", "Books", new { id = book.Id })" class="btn btn-dark">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 512 512" fill="currentColor">
                                <path d="M362.7 19.3L314.3 67.7 444.3 197.7l48.4-48.4c25-25 25-65.5 0-90.5L453.3 19.3c-25-25-65.5-25-90.5 0zm-71 71L58.6 323.5c-10.4 10.4-18 23.3-22.2 37.4L1 481.2C-1.5 489.7 .8 498.8 7 505s15.3 8.5 23.7 6.1l120.3-35.4c14.1-4.2 27-11.8 37.4-22.2L421.7 220.3 291.7 90.3z" />
                            </svg>
                            Edit
                        </a>
                        <a href="@Url.Action("Delete", "Books", new { id = book.Id })" class="btn btn-dark"
                           onclick="return confirm('Are you sure you want to delete this book?');">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 512 512" fill="currentColor">
                                <path d="M135.2 17.7L128 32 32 32C14.3 32 0 46.3 0 64S14.3 96 32 96l384 0c17.7 0 32-14.3 32-32s-14.3-32-32-32l-96 0-7.2-14.3C307.4 6.8 296.3 0 284.2 0L163.8 0c-12.1 0-23.2 6.8-28.6 17.7zM416 128L32 128 53.2 467c1.6 25.3 22.6 45 47.9 45l245.8 0c25.3 0 46.3-19.7 47.9-45L416 128z" />
                            </svg>
                            Delete
                        </a>
                    </th>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        <p>No Books Added 😢</p>

    </div>

}

@section Scripts {
    <script>
        $(document).ready(function () {
            toastr.error("Test");
        });
    </script>
}






